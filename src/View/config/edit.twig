{% extends 'default_frame.twig' %}

{% block javascript %}
    <script type="text/javascript">

    </script>
{% endblock %}

{% block title %}{{ plugin_name }}{% endblock %}


{% block main %}

    <div class="row" id="aside_wrap">
        <form name="form1" role="form" novalidate class="form-horizontal" id="point_form" method="post" action="">
            <div class="col-md-9">

                <div class="box">
                	<div class="box-header">
                		<h3 class="box-title">{{ plugin_name }}のご利用の前に</h3>
                	</div>
                    <div class="box-body">
                        <div>
                            {{ plugin_name }}をご利用頂くにあたり、
                            {{ company_name }}との契約が必要です。<br/>
                            <a href="{{ url_ja }}" target="_blank" >こちら</a>からお申し込みをお願い致します。
                        </div>
                    </div>
                </div>

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">アカウントの設定</h3>
                    </div>
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-3 control-label required">Public key<span class="label label-danger">必須</span></label>
                            <div class="row">
                                <div class="col-sm-3">
                                    {{ form_widget(form.pkey, { 'attr': {'placeholder': 'pkey_xxxxxxxxxxxxxxxxxxx'} }) }}
                                    {{ form_errors(form.pkey) }}
                                    
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label required">Secret key<span class="label label-danger">必須</span></label>
                            <div class="row">
                                <div class="col-sm-3 {% if form.host_id.vars.errors is not empty %}has-error{% endif %}">
                                    {{ form_widget(form.skey, { 'attr': {'placeholder': 'skey_xxxxxxxxxxxxxxxxxxx'} }) }}
                                    {{ form_errors(form.skey) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-3" id="aside_column">
                <div class="col_inner">
                    <div class="box no-header">
                        <div class="box-body">
                            <div class="row text-center">
                                <div class="col-sm-6 col-sm-offset-3 col-md-12 col-md-offset-0">
                                    <button class="btn btn-primary btn-block btn-lg" onclick="document.form1.submit();">
                                        登録する
                                    </button>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
            </div>
            <!-- /.col -->
        </form>
    </div>
{% endblock %}
