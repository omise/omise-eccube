		<div class="form-group">
		<label class="col-sm-3 control-label required">Public key　<span class="label label-danger">必須</span></label>
		<div class="row">
			<div class="col-sm-8">
				{{ form_widget(form.pkey, { 'attr': {'placeholder': 'pkey_xxxxxxxxxxxxxxxxxxx', 'class': 'form-control'} }) }}
				{{ form_errors(form.pkey) }}
			</div>
		</div>
	</div>
</div>
