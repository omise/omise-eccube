			<div class="col-sm-8">
				{{ form_widget(form.pkey, { 'attr': {'placeholder': 'ICHIRO SUZUKI', 'class': 'form-control'} }) }}
				{{ form_errors(form.pkey) }}
			</div>
		</div>
	</div>
	<div class="box-body">
		<div class="form-group">
		<label class="col-sm-3 control-label required">クレジットカード番号　<span class="label label-danger">必須</span></label>
		<div class="row">
			<div class="col-sm-8">
				{{ form_widget(form.pkey, { 'attr': {'placeholder': '4242424242424242', 'class': 'form-control'} }) }}
				{{ form_errors(form.pkey) }}
			</div>
		</div>
	</div>
